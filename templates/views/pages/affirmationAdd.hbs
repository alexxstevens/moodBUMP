		<meta name="keywords" content="HTML" />
		<meta name="author" content="Alex Stevens" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{{title}}</title>
  		<link crossorigin="use-credentials" rel="manifest" href="../../../public/manifest.json">

		<!-- font awesome -->
		<link
			rel="stylesheet"
			href="https://use.fontawesome.com/releases/v5.15.1/css/all.css"
			integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp"
			crossorigin="anonymous"
		/>
		<!-- fonts -->
		<link
			href="https://fonts.googleapis.com/css2?family=Overpass:wght@200;400;900&display=swap"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
			integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
			crossorigin="anonymous"
		/>
		<link
			rel="stylesheet"
			href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css"
		/>
		<link href="/style/main.css" rel="stylesheet" />
		<script src="//code.jquery.com/jquery-1.12.4.js"></script>
		<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
		<script rel="text/javascript" src="/js/add_script.js"></script>
	</head>
	<body>
		{{>header}}
		<main>
		<form action="/addAffirmation" method="POST">
			<div class="row">
				<div class="col-sm-10 col-md-8 center-block">
					<textarea name="affirmationEntry"
						placeholder="Type your new affirmation entry here..."
					></textarea>
				</div>
			</div>

			<div class="row">
				<div class="col-sm-10 col-md-8 center-block">
					<a class="clr_underline" href="/affirmationHome"
						><button class="btn btn-primary btn-lg btn-block submit">
							Submit New Affirmation
						</button></a
					>
				</div>
			</div>
			</form>
			<br>
			<div class="row">
				<div class="col-sm-10 col-md-8 center-block">
					<h3 class="heading">Existing Affirmations:</h3>
				</div>
			</div>


			{{#unless affirmations}}
			<div class="row">
				<div class="col-sm-10 col-md-8 center-block">
					<div class="goals">
						<ul class="list-group">
							<!-- this page will display if goal DB empty-->
							<li class="list-group-item">
								<p id="subNote" class="white-bkgd">
									Add your first affirmation!
								</p>
							</li>
						</ul>
					</div>
				</div>
			</div>
			{{/unless}}


			<div class="row">
				<div class="col-sm-10 col-md-8 center-block">
					<ul class="list-group">
						{{#each affirmations}}
						<!-- will populate from DB-->
						<li class="list-group-item">
							<p class="item">"{{affirmationEntry}}"</p>
							<span class="icon"
								><button class="container" id="opener_1">
									<i class="far fa-trash-alt"></i></button
							></span>
						</li>
						{{/each}}
					</ul>
				</div>
			</div>

			<div id="dialog" title="Confirm Delete">
				Are your sure you want to delete this item?
			</div>
		</main>
		{{>footer}}
	</body>
</html>
 